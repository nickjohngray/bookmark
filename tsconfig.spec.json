/* Unit-test TypeScript config.
   - Extends root settings.
   - Includes Jasmine types for Angular's testing environment. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec", // Output directory for compiled spec/test code
    "types": [
      "jasmine" // Add Jasmine globals for unit testing
    ]
  },
  "include": [
    "src/**/*.ts" // Include all TS files for tests
  ]
}
